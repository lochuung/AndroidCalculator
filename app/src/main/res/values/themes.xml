<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="materialButtonStyle">@style/Widget.Calculator.Button</item>
        <item name="android:buttonStyle">@style/Widget.Calculator.Button</item>
    </style>

    <style name="Widget.Calculator.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />
</resources>